<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x176"
    android:layout_marginBottom="@dimen/x20"
    android:background="@drawable/have_no_use_shape">

    <TextView
        android:id="@+id/effective_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@mipmap/package_take_effect_time"
        android:paddingBottom="@dimen/x2"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:paddingTop="@dimen/x2"
        android:text="2018/12/16生效"
        android:textColor="@color/white"
        android:textSize="@dimen/x22" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/meal_detail_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginTop="@dimen/x26"
            android:text="无限流量+100分钟/月 1年有效期年有效期"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/x24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginTop="@dimen/x20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="包含:"
                android:textColor="#4D4D4D"
                android:textSize="@dimen/x24" />

            <TextView
                android:id="@+id/meal_include_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:text="流量100M+语音10分钟/月"
                android:textColor="#4D4D4D"
                android:textSize="@dimen/x24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginTop="@dimen/x4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有效期:"
                android:textColor="#4D4D4D"
                android:textSize="@dimen/x24" />

            <TextView
                android:id="@+id/term_of_validity_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:text="1个月"
                android:textColor="#4D4D4D"
                android:textSize="@dimen/x24" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>