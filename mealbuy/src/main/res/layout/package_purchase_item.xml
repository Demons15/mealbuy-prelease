<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/package_purchase_item_area"
    android:layout_width="@dimen/x278"
    android:layout_height="@dimen/x284"
    android:layout_marginBottom="@dimen/x22"
    android:layout_marginRight="@dimen/x16"
    android:background="@mipmap/package_purchase_bg">

    <LinearLayout
        android:id="@+id/package_purchase_top_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x238"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/package_purchase_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x24"
            android:text="移动语音卡"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/x28" />

        <TextView
            android:id="@+id/package_purchase_name_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x22"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x16"
            android:singleLine="true"
            android:text="无限流量+100分钟/月"
            android:textColor="#4D4D4D"
            android:textSize="@dimen/x24" />

        <TextView
            android:id="@+id/package_purchase_monthly_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x16"
            android:text="月均 ¥15"
            android:textColor="#9BCF0A"
            android:textSize="@dimen/x26" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x14"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x34"
                android:text="原价:¥46"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/x20"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="售价:"
                    android:textColor="#4D4D4D"
                    android:textSize="@dimen/x20" />

                <TextView
                    android:id="@+id/present_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x12"
                    android:text="245"
                    android:textColor="#4D4D4D"
                    android:textSize="@dimen/x28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="#4D4D4D"
                    android:textSize="@dimen/x18" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/package_purchase_coupons"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x46"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:paddingTop="@dimen/x10"
        android:text="加送2个月，畅享14个月!"
        android:textColor="@color/white"
        android:textSize="@dimen/x20" />
</RelativeLayout>